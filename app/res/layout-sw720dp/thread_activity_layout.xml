<?xml version="1.0" encoding="utf-8"?>

<!-- The main content view -->
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/board_grid_advert"
            android:background="@color/PaletteYellowWhite"
            >

        <ListView
                android:id="@+id/board_grid_view_tablet"
                style="@style/BoardGridViewTablet"
                    />

        <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/board_grid_view_tablet"
                />

    </RelativeLayout>

    <include layout="@layout/ad_section"
             android:id="@+id/board_grid_advert"
            />

</RelativeLayout>