<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:chanapps="http://chanapps.com">

<!-- posting -->

    <PreferenceCategory
            android:key="pref_user_category"
            android:title="@string/pref_user_category"
            android:summary="@string/pref_user_category_summ"
            android:persistent="true"
            >

        <EditTextPreference
                android:key="pref_user_name"
                android:title="@string/pref_user_name"
                android:hint="@string/post_reply_name_hint"
                android:summary="@string/pref_user_name_summ"
                android:inputType="textPersonName"
                android:maxLength="100"
                />

        <EditTextPreference
                android:key="pref_user_email"
                android:title="@string/pref_user_email"
                android:hint="@string/post_reply_email_hint"
                android:summary="@string/pref_user_email_summ"
                android:inputType="textEmailAddress"
                android:maxLength="100"
                />

        <EditTextPreference
                android:key="pref_user_password"
                android:title="@string/pref_user_password"
                android:hint="@string/post_reply_password_hint"
                android:summary="@string/pref_user_password_summ"
                android:inputType="textVisiblePassword|numberPassword"
                android:maxLength="8"
                />

    </PreferenceCategory>

    <!-- pass -->

    <PreferenceCategory
            android:key="pref_pass_category"
            android:title="@string/pref_pass_category"
            android:summary="@string/pref_pass_category_summ">

        <EditTextPreference
                android:key="pref_pass_token"
                android:title="@string/pref_pass_token"
                android:hint="@string/pref_pass_token_hint"
                android:inputType="text|textCapCharacters|textNoSuggestions"
                android:summary="@string/pref_pass_token_summ"
                android:maxLength="10"
                />

        <EditTextPreference
                android:key="pref_pass_pin"
                android:title="@string/pref_pass_pin"
                android:hint="@string/pref_pass_pin_hint"
                android:summary="@string/pref_pass_pin_summ"
                android:inputType="textVisiblePassword|numberPassword"
                android:maxLength="6"
                />

    </PreferenceCategory>

    <!-- cache -->

    <PreferenceCategory
            android:key="pref_cache_category"
            android:title="@string/pref_cache_category"
            android:summary="@string/pref_cache_category_summ">

        <com.chanapps.four.component.CacheSizePreference
                android:key="pref_cache_size"
                android:title="@string/pref_cache_size"
                android:summary="@string/pref_cache_size_summ"
                chanapps:min="512"
                chanapps:unitsLeft=""
                chanapps:unitsRight="MB"
                />

        <Preference
                android:key="pref_clear_cache"
                android:title="@string/pref_clear_cache"
                android:summary="@string/pref_clear_cache_summ" />

        <Preference
                android:key="pref_clear_favorites"
                android:title="@string/pref_clear_favorites"
                android:summary="@string/pref_clear_favorites_summ" />

        <Preference
                android:key="pref_clear_watchlist"
                android:title="@string/pref_clear_watchlist"
                android:summary="@string/pref_clear_watchlist_summ" />

    </PreferenceCategory>

    <!-- customize -->

    <PreferenceCategory
            android:key="pref_advanced_category"
            android:title="@string/pref_advanced_category">

        <PreferenceScreen
                android:key="pref_custom_category"
                android:title="@string/pref_custom_category"
                android:summary="@string/pref_custom_category_summ">

            <ListPreference
                    android:key="pref_theme"
                    android:title="@string/pref_theme_title"
                    android:summary="@string/pref_theme_summary"
                    android:entries="@array/pref_theme_entries"
                    android:entryValues="@array/pref_theme_entry_values"
                    android:defaultValue="@string/pref_theme_default_value" />

            <CheckBoxPreference
                    android:key="pref_notifications"
                    android:title="@string/pref_notifications"
                    android:summaryOn="@string/pref_notifications_summ_on"
                    android:summaryOff="@string/pref_notifications_summ_off"
                    android:defaultValue="true" />

            <CheckBoxPreference
                    android:key="pref_use_friendly_ids"
                    android:title="@string/pref_use_friendly_ids"
                    android:summaryOn="@string/pref_use_friendly_ids_summ_on"
                    android:summaryOff="@string/pref_use_friendly_ids_summ_off"
                    android:defaultValue="true" />

            <CheckBoxPreference
                    android:key="pref_show_nsfw_boards"
                    android:title="@string/pref_show_nsfw_boards"
                    android:summary="@string/pref_show_nsfw_boards_summ_detail"
                    android:summaryOn="@string/pref_show_nsfw_boards_summ_on"
                    android:summaryOff="@string/pref_show_nsfw_boards_summ_off"
                    android:defaultValue="false" />

        </PreferenceScreen>

        <Preference
                android:key="pref_blocklist_button"
                android:title="@string/pref_blocklist_button"
                android:summary="@string/pref_blocklist_button_summ" />

        <Preference
                android:key="pref_reset_to_defaults"
                android:title="@string/pref_reset_to_defaults"
                android:summary="@string/pref_reset_to_defaults_summ" />

    </PreferenceCategory>

    <PreferenceCategory
            android:key="pref_about_category"
            android:title="@string/pref_about_category">

        <Preference
                android:key="pref_about"
                android:title="@string/pref_about"
                android:summary="@string/pref_about_summ" />

    </PreferenceCategory>

</PreferenceScreen>