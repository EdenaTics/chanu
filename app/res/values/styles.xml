<resources>

    <style name="AppTheme" parent="android:Theme.Holo" />

    <style name="tabTheme" parent="android:style/Theme">
        <item name="android:tabWidgetStyle">@style/Widget.TabWidget</item>
    </style>

    <style name="Widget.TabWidget" parent="android:Theme">
        <item name="android:tabStripEnabled">false</item>
    </style>

    <style name="ListViewTemplate" parent="android:style/Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">0dp</item>
        <item name="android:verticalSpacing">0dp</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:stretchMode">none</item>
    </style>

<!-- SHARED GRID STYLES -->

    <style name="GridViewTemplate" parent="android:style/Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">0dp</item>
        <item name="android:verticalSpacing">1dp</item>
        <item name="android:horizontalSpacing">1dp</item>
        <item name="android:numColumns">2</item>
        <item name="android:stretchMode">none</item>
        <item name="android:background">@color/PaletteBlack</item>
    </style>

    <style name="GridLayout" parent="android:style/Theme">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:background">@color/PaletteBlack</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="GridItemStyle" parent="android:style/Theme">
    </style>

    <style name="GridTextImageOverlayStyle" parent="GridItemStyle">
        <item name="android:textColor">@color/PaletteWhite</item>
        <item name="android:background">@color/PaletteBlackMostlyOpaque</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">top|left</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="GridTextOnlyStyle" parent="GridTextImageOverlayStyle">
        <item name="android:background">@color/PaletteWhite</item>
        <item name="android:textColor">@color/PaletteBlack</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="GridFinalItemStyle" parent="GridTextOnlyStyle">
        <item name="android:background">@color/PaletteBlackMostlyOpaque</item>
        <item name="android:textColor">@color/PaletteWhite</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GridImageStyle" parent="GridItemStyle">
        <item name="android:background">@color/PaletteWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:src">@drawable/stub_image</item>
    </style>

    <style name="ListImageStyle">
        <item name="android:background">@color/PaletteWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:src">@drawable/stub_image</item>
    </style>

    <style name="GridCountryFlagStyle" parent="GridItemStyle">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">11dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:contentDescription">@string/popup_country_flag</item>
    </style>

<!-- SELECTOR GRID STYLES -->

    <style name="SelectorGridLayout" parent="GridLayout">
        <item name="android:layout_height">182dp</item>
    </style>

    <style name="SelectorGridImageStyle" parent="GridImageStyle">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>

    <style name="SelectorGridTextImageOverlayStyle" parent="GridItemStyle">
        <item name="android:background">@color/PaletteBlackMostlyOpaque</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/PaletteWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- BOARD GRID STYLES -->

    <style name="BoardGridLayout" parent="GridLayout">
        <item name="android:layout_height">246dp</item>
    </style>

    <style name="BoardGridImageStyle" parent="GridImageStyle">
        <item name="android:maxHeight">246dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginBottom">96dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="BoardAdGridImageStyle" parent="GridImageStyle">
        <item name="android:maxHeight">246dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="BoardGridTextImageOverlayStyle" parent="GridItemStyle">
        <item name="android:textColor">@color/PaletteWhite</item>
        <item name="android:background">@color/PaletteBlackMostlyOpaque</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textSize">14sp</item>
    </style>

<!-- THREAD GRID STYLES -->

    <style name="ThreadGridLayout" parent="GridLayout">
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="ThreadHeaderGridImageStyle" parent="GridImageStyle">
        <item name="android:maxHeight">150dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ThreadGridImageStyle" parent="GridImageStyle">
        <item name="android:maxHeight">80dp</item>
        <item name="android:maxWidth">80dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ThreadAdGridImageStyle" parent="GridImageStyle">
        <item name="android:maxHeight">80dp</item>
        <item name="android:maxWidth">80dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="GridItemHighlightStyle" parent="GridItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="GridItemSelfHighlightStyle" parent="GridItemHighlightStyle">
        <item name="android:background">@color/PaletteLightBlueHalfOpacity</item>
    </style>

    <style name="GridItemPrevHighlightStyle" parent="GridItemHighlightStyle">
        <item name="android:background">@color/PaletteDarkPinkHalfOpacity</item>
    </style>

    <style name="GridItemNextHighlightStyle" parent="GridItemHighlightStyle">
        <item name="android:background">@color/PaletteDarkGreenHalfOpacity</item>
    </style>

<!-- THREAD LIST STYLES -->

    <style name="ThreadListLayout" parent="android:style/Theme">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@color/PaletteBlack</item>
    </style>

    <!-- we need this second inner layout so we have the outer for highlight rectangles -->
    <style name="ThreadListLayoutInner" parent="ThreadListLayout">
        <item name="android:padding">6dp</item>
    </style>

    <style name="ThreadListLayoutNoHighlight" parent="ThreadListLayout">
        <item name="android:padding">8dp</item>
    </style>

    <style name="ThreadAdListImageStyle">
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="ThreadListItemImageStyle">
        <item name="android:background">@color/PaletteBlack</item>
    </style>

    <style name="ListShortTextStyle" parent="android:style/Theme">
        <item name="android:textColor">@color/PaletteWhite</item>
        <item name="android:background">@color/PaletteBlack</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">top|left</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListFullTextStyle" parent="android:style/Theme">
        <item name="android:textColor">@color/PaletteWhite</item>
        <item name="android:background">@color/PaletteBlack</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">top|left</item>
        <item name="android:textSize">14sp</item>

        <item name="android:scrollHorizontally">true</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:autoLink">web|email</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="ListCountryFlagStyle" parent="android:style/Theme">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">11dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:contentDescription">@string/popup_country_flag</item>
    </style>

<!-- POST REPLY STYLES -->

    <style name="PostReplyEditTextStyle" parent="android:style/Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:gravity">top|left</item>
        <item name="android:background">@drawable/border_background</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:imeActionLabel">@string/post_reply_send</item>
    </style>

    <style name="PostReplyCheckboxStyle" parent="android:style/Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="PostReplyButtonStyle" parent="android:style/Theme">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="PopupFullTextHorizontalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/PaletteLighterGray</item>
    </style>

    <style name="PopupFullTextButtonStyle" parent="android:style/Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@color/PaletteTransparent</item>
    </style>

    <style name="PopupFullTextViewStyle" parent="android:style/Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#0d0907</item>
        <item name="android:linksClickable">true</item>
        <item name="android:autoLink">web|email</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MessageTextStyle" parent="android:style/Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <color name="PaletteLightGreen">#58b75a</color>
    <color name="PaletteDarkGreen">#58675a</color>
    <color name="PaletteDarkGreenHalfOpacity">#8058675a</color>
    <color name="PaletteDarkPink">#ca707c</color>
    <color name="PaletteDarkPinkHalfOpacity">#80ca707c</color>
    <color name="PaletteLightBlue">#397ce4</color>
    <color name="PaletteLightBlueHalfOpacity">#8079ccd4</color>
    <color name="PaletteLightGreenHalfOpacity">#8077b496</color>
    <color name="PaletteOffWhite">#ddd9d7</color>
    <color name="PaletteOffWhiteHalfOpacity">#80ddd9d7</color>
    <color name="PaletteWhite">#fefefe</color>
    <color name="PaletteTransparent">#00000000</color>
    <color name="PaletteLighterGray">#ddd</color>
    <color name="PaletteBlack">#ff010101</color>
    <color name="PaletteBlackHalfOpacity">#80010101</color>
    <color name="PaletteBlackMostlyOpaque">#ec000000</color>

</resources>
