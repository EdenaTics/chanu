<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar" />

    <style name="tabTheme" parent="AppTheme">
        <item name="android:tabWidgetStyle">@style/Widget.TabWidget</item>
    </style>

    <style name="Widget.TabWidget" parent="AppTheme">
        <item name="android:tabStripEnabled">false</item>
    </style>

    <style name="ListViewTemplate" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:smoothScrollbar">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:verticalSpacing">0dp</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:stretchMode">none</item>
<!--        <item name="android:divider">@color/PaletteOffWhite</item> -->
        <item name="android:dividerHeight">1px</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

<!-- SELECTOR GRID STYLES -->

    <style name="SelectorScrollView" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- <item name="android:background">#000000</item> -->
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="SelectorBoardType" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:isScrollContainer">true</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- BOARD GRID STYLES -->

    <style name="BoardGridLayout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <!-- <item name="android:layout_height">140dp</item> -->
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BoardProgressBar" parent="@android:style/Widget.Holo.Light.ProgressBar.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:background">@color/PaletteTransparent</item>
    </style>

    <style name="BoardGridView" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:verticalSpacing">0dp</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:numColumns">2</item>
        <item name="android:stretchMode">none</item>
        <item name="android:gravity">top|left</item>
        <item name="android:smoothScrollbar">true</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="BoardGridImage" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@string/thread_post_image</item>
    </style>

    <style name="BoardSelectorGridTextImageOverlay" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/PaletteTextOverlayBackground</item>
        <item name="android:textColor">@color/PaletteWhite</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoardGridTextImageOverlayWrapper" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="BoardGridTextImageTopOverlay" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/PaletteTextOverlayBackground</item>
        <item name="android:textColor">@color/PaletteWhite</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoardGridTextImageOverlay" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_below">@+id/grid_item_thread_subject</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/PaletteTextOverlayBackground</item>
        <item name="android:textColor">@color/PaletteWhite</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoardGridTextAdImageOverlay" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/PaletteTextOverlayBackground</item>
        <item name="android:textColor">@color/PaletteBlue</item>
        <item name="android:text">@string/jlist_ad_message_compact</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoardGridCountryFlag" parent="AppTheme">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">11dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:contentDescription">@string/thread_country_flag</item>
    </style>

    <!-- THREAD LIST STYLES -->

    <style name="ThreadListLayout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThreadListItemImage" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <!-- <item name="android:layout_marginTop">8dp</item> -->
        <item name="android:layout_marginRight">8dp</item>
        <!-- <item name="android:layout_marginBottom">8dp</item> -->
        <!-- <item name="android:paddingBottom">8dp</item> -->
        <item name="android:gravity">top|left</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:contentDescription">@string/thread_post_image</item>
    </style>

    <style name="ThreadListItemExpandedProgressBar" parent="@android:style/Widget.Holo.Light.ProgressBar.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ThreadListItemImageExpanded" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:contentDescription">@string/thread_post_image_expanded</item>
    </style>

    <style name="ThreadListItemHeadText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minLines">1</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingRight">64dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_toRightOf">@+id/list_item_image</item>
        <item name="android:gravity">top|left</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/PaletteBlackHalfOpacity</item>
    </style>

    <style name="ThreadListItemImageInfo" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_toRightOf">@+id/list_item_image</item>
        <item name="android:layout_below">@+id/list_item_header</item>
        <item name="android:gravity">top|left</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/PaletteBlackHalfOpacity</item>
    </style>

    <style name="ThreadListItemShortText" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_toRightOf">@+id/list_item_image</item>
        <item name="android:layout_below">@+id/list_item_header</item>
        <item name="android:gravity">top|left</item>
        <item name="android:textSize">14sp</item>
        <!-- <item name="android:textIsSelectable">true</item>  -->
        <item name="android:autoLink">web</item>
        <item name="android:linksClickable">false</item>
    </style>

    <style name="ThreadListItemExifText" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">top|left</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ThreadListItemFullText" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">top|left</item>
        <item name="android:textSize">14sp</item>
        <!-- <item name="android:textIsSelectable">true</item>  -->
        <item name="android:autoLink">web|email</item>
        <item name="android:linksClickable">false</item>
        <!-- <item name="android:focusable">false</item> -->
        <!-- <item name="android:focusableInTouchMode">true</item> -->
    </style>

    <style name="ThreadListItemDateText" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minLines">1</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">top|right</item>
        <item name="android:textColor">@color/PaletteBlackHalfOpacity</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">10:12 AM</item>
    </style>

    <style name="ThreadListItemCountryFlag" parent="AppTheme">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">11dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_below">@+id/list_item_date</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">right</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:contentDescription">@string/popup_country_flag</item>
    </style>

    <style name="ThreadListItemHeaderBar" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <!--
        <item name="android:layout_alignParentBottom">true</item>
        -->
        <item name="android:background">@color/PaletteBlue</item>
    </style>

    <!-- POST REPLY STYLES -->

    <style name="PostReplyEditText" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:gravity">top|left</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:imeActionLabel">@string/post_reply_send</item>
    </style>

    <style name="PostReplyCheckbox" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="PostReplyButton" parent="AppTheme">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

<!-- POPUP STYLES -->

    <style name="PopupFullTextLayout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/PaletteBlackHalfOpacity</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PopupFullTextScrollLayout" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:background">@color/popupbackground</item>
    </style>

    <style name="PopupFullTextInnerLayout" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/popupbackground</item>
    </style>

    <style name="PopupFullTextHeader" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:textSize">22dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/PaletteBlue</item>
        <item name="android:background">@color/PaletteTransparent</item>
    </style>

    <style name="PopupFullTextHeaderHorizontalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/PaletteBlue</item>
    </style>

    <style name="PopupFullTextHorizontalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/DimDivider</item>
    </style>

    <style name="PopupFullTextButton" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@color/PaletteTransparent</item>
    </style>

    <style name="PopupFullTextView" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:linksClickable">true</item>
        <item name="android:autoLink">web|email</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MessageText" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- action bar -->

    <style name="BoardJumpDropDown" parent="android:style/Widget.Holo.Light.Spinner">
    </style>

