        <item name="android:maxLines">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="BoardGridOverlay" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
