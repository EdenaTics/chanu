    <style name="PostReplyButtonStyle" parent="android:style/Theme">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="PopupFullTextHorizontalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/DimDivider</item>
    </style>

    <style name="PopupFullTextButtonStyle" parent="android:style/Theme">
        <item name="android:layout_width">match_parent</item>
