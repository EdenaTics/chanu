<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_item"
        style="@style/ThreadListLayout">

    <RelativeLayout
            style="@style/ThreadListLayoutInner"
            >

        <TextView
                android:id="@+id/list_item_header"
                style="@style/ListShortTextStyle"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="FOO"
                />

        <TextView
                android:id="@+id/list_item_text"
                style="@style/ListFullTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="350dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="bar"
                />

        <ImageView
                android:id="@+id/list_item_country_flag"
                style="@style/ListCountryFlagStyle"
                android:contentDescription="@string/thread_country_flag"
                />

    </RelativeLayout>

</RelativeLayout>
