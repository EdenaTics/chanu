<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/thread_grid_item"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="#e2e2e2">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/thread_grid_item_relative"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent" >
    
    <ImageView
        android:id="@+id/thread_grid_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:maxHeight="120dp"
        android:scaleType="fitEnd"
        android:src="@drawable/stub_image" />
    <TextView
        android:id="@+id/thread_grid_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="120dp"
        android:textColor="#ffeaeaea"
        android:background="#80121212"
        android:textStyle="normal"
        android:textColorHint="#555555"
        android:padding="8dp"
        android:gravity="top|left"
        android:textSize="12sp"
    />
    </RelativeLayout>
</LinearLayout>