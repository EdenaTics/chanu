<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/board_grid_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp">
        
	<GridView
            android:id="@+id/board_grid_view"
            style="@style/BoardGridView"
            />

	<LinearLayout android:id="@+id/board_refresh_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:background="#bb004400">

	    <TextView
            android:id="@+id/board_refresh_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:background="#00000000"
            android:layout_marginRight="10dp"/>
	    <Button
            android:id="@+id/board_refresh_button"
            android:layout_width="48dp"
            android:layout_height="fill_parent"
            android:textColor="#ff00cc00"
            android:drawableLeft="@drawable/navigation_refresh"
            android:background="#00000000"
            />
        <Button
            android:id="@+id/board_ignore_button"
            android:layout_width="48dp"
            android:layout_height="fill_parent"
            android:textColor="#ff00cc00"
            android:drawableLeft="@drawable/navigation_cancel"
            android:background="#00000000"
            />
