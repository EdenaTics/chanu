<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/widget_layout"
            android:orientation="horizontal"
            android:padding="0dp"
            android:verticalSpacing="8dp"
            android:horizontalSpacing="8dp"
            android:weightSum="3"
            android:background="@android:color/background_dark"
        >

    <ImageView android:id="@+id/image_left"
               android:layout_height="fill_parent"
               android:layout_width="0dp"
               android:contentDescription="Left Thumbnail Image"
               android:scaleType="centerCrop"
               android:layout_weight="1"
               android:padding="2dp"
            />

    <ImageView android:id="@+id/image_center"
               android:layout_height="fill_parent"
               android:layout_width="0dp"
               android:contentDescription="Center Thumbnail Image"
               android:scaleType="centerCrop"
               android:layout_weight="1"
               android:padding="2dp"
            />

    <ImageView android:id="@+id/image_right"
               android:layout_height="fill_parent"
               android:layout_width="0dp"
               android:contentDescription="Right Thumbnail Image"
               android:scaleType="centerCrop"
               android:layout_weight="1"
               android:padding="2dp"
            />

    <!-- android:src="@drawable/board_3" -->
</LinearLayout>