<?xml version="1.0" encoding="utf-8"?>
<com.chanapps.four.component.CheckableLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/ThreadListItemLayout"
        android:id="@+id/list_item"
        android:descendantFocusability="blocksDescendants"
        android:background="@color/PaletteYellowWhite"
        >

    <RelativeLayout style="@style/ThreadListItemBar">
        <RelativeLayout style="@style/ThreadListItemImageWrapper" android:id="@+id/list_item_image_wrapper">
            <ImageView style="@style/ThreadListItemImage" android:id="@+id/list_item_image"/>
            <ProgressBar style="@style/ThreadListItemExpandedProgressBar" android:id="@+id/list_item_expanded_progress_bar"/>
        </RelativeLayout>
        <LinearLayout style="@style/ThreadListHeaderBarAgoWrapper" android:id="@+id/list_item_ago_wrapper">
            <TextView style="@style/ThreadListHeaderBarAgo" android:id="@+id/list_item_header_bar_ago"/>
            <TextView style="@style/ThreadListHeaderBarNo" android:id="@+id/list_item_header_bar_no"/>
        </LinearLayout>
        <ImageView style="@style/ThreadListItemCountryFlag" android:id="@+id/list_item_country_flag"/>
        <LinearLayout style="@style/ThreadListItemNumWrap" android:id="@+id/list_item_num_direct_replies">
            <View style="@style/ThreadListHeaderNumVerticalBorder"/>
            <LinearLayout style="@style/ThreadListItemNumWrapInner">
                <TextView style="@style/ThreadListHeaderNumNum" android:id="@+id/list_item_num_direct_replies_text"
                          android:textColor="@color/blue_base"
                          android:textSize="@dimen/ThreadListHeaderLabel"
                        />
                <TextView style="@style/ThreadListHeaderNumLabel" android:id="@+id/list_item_num_direct_replies_label"
                          android:textColor="@color/blue_base"/>
            </LinearLayout>
            <LinearLayout style="@style/ThreadListHeaderNumVerticalBorder"/>
        </LinearLayout>
        <LinearLayout style="@style/ThreadListHeaderBarReply" android:id="@+id/list_item_header_bar_reply_wrapper">
            <ImageView style="@style/ThreadListItemBarReplyIcon" android:id="@+id/list_item_header_bar_reply"/>
        </LinearLayout>
        <LinearLayout style="@style/ThreadListItemBarOverflow" android:id="@+id/list_item_header_bar_overflow_wrapper">
            <ImageView style="@style/ThreadListItemBarOverflowIcon" android:id="@+id/list_item_header_bar_overflow"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/list_item_image_expanded_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ThreadListHeader_small_padding"
            android:paddingLeft="@dimen/ThreadListHeader_padding"
            android:paddingRight="@dimen/ThreadListHeader_padding"
            android:visibility="gone"
            >
        <ImageView style="@style/ThreadListItemImageExpanded" android:id="@+id/list_item_image_expanded"/>
        <View style="@style/ThreadListItemImageExpandedClickEffect" android:id="@+id/list_item_image_expanded_click_effect"/>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/ThreadListHeader_padding"
            android:paddingRight="@dimen/ThreadListHeader_padding"
            android:paddingTop="@dimen/ThreadListHeader_small_padding"
            android:paddingBottom="@dimen/ThreadListHeader_padding"
            android:orientation="vertical"
            >
        <TextView style="@style/ThreadListItemHead" android:id="@+id/list_item_header"/>
        <TextView style="@style/ThreadListItemSubject" android:id="@+id/list_item_subject"/>
        <TextView style="@style/ThreadListItemFullText" android:id="@+id/list_item_text"/>
        <TextView style="@style/ThreadListItemExifText" android:id="@+id/list_item_exif_text"/>
    </LinearLayout>

</com.chanapps.four.component.CheckableLinearLayout>
