<?xml version="1.0" encoding="utf-8"?>
<com.chanapps.four.component.CheckableLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/ThreadListItemLayout"
        android:id="@+id/list_item"
        android:descendantFocusability="blocksDescendants"
        android:background="@color/PaletteYellowWhite"
        >

    <RelativeLayout
            android:id="@+id/list_item_image_expanded_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ThreadListItemImageExpandedWrapper_marginBottom"
            android:paddingLeft="@dimen/ThreadListItemImageExpandedWrapper_paddingLeft"
            android:paddingRight="@dimen/ThreadListItemImageExpandedWrapper_paddingRight"
            android:visibility="gone"
            >
        <ImageView style="@style/ThreadListItemImageExpanded" android:id="@+id/list_item_image_expanded"/>

        <View
                android:id="@+id/list_item_image_expanded_click_effect"
                style="@style/ThreadListItemImageExpandedClickEffect"
                />

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_header_wrapper"
            android:paddingLeft="@dimen/ThreadListItemHeaderWrapper_paddingLeft"
            android:paddingRight="@dimen/ThreadListItemHeaderWrapper_paddingRight"
            >
        <View android:layout_width="@dimen/ThreadListItemImageSpacer_layout_width"
              android:layout_height="match_parent"
              android:id="@+id/list_item_image_spacer"/>
        <RelativeLayout style="@style/ThreadListItemImageWrapper"
                        android:layout_toRightOf="@+id/list_item_image_spacer"
                        android:id="@+id/list_item_image_wrapper">
            <ImageView
                    style="@style/ThreadListItemImage" android:id="@+id/list_item_image"/>
            <ProgressBar style="@style/ThreadListItemExpandedProgressBar"
                         android:layout_centerInParent="true"
                         android:id="@+id/list_item_expanded_progress_bar"/>
        </RelativeLayout>
        <TextView style="@style/ThreadListItemSubject" android:id="@+id/list_item_subject"
                android:textColor="@color/PaletteBlack"
                />
        <ImageView style="@style/ThreadListItemCountryFlag" android:id="@+id/list_item_country_flag"/>
        <TextView style="@style/ThreadListItemHead" android:id="@+id/list_item_header"
                  android:textColor="@color/PaletteLightGray"
                />
    </RelativeLayout>

    <TextView style="@style/ThreadListItemFullText" android:id="@+id/list_item_text"
              android:textColor="@color/PaletteBlack"
            />

    <TextView style="@style/ThreadListItemExifText" android:id="@+id/list_item_image_exif"
              android:textColor="@color/PaletteLightGray"
            />

</com.chanapps.four.component.CheckableLinearLayout>
