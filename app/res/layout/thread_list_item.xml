<?xml version="1.0" encoding="utf-8"?>
<com.chanapps.four.component.CheckableLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/ThreadListLayout"
        android:id="@+id/list_item"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <ImageView style="@style/ThreadListItemImageExpanded" android:id="@+id/list_item_image_expanded"/>

        <View
                android:id="@+id/list_item_image_expanded_click_effect"
                style="@style/ThreadListItemImageExpandedClickEffect"
                />

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_header_wrapper">
        <RelativeLayout style="@style/ThreadListItemImageWrapper" android:id="@+id/list_item_image_wrapper">
            <com.chanapps.four.component.StretchyImageView
                    style="@style/ThreadListItemImage" android:id="@+id/list_item_image"/>
            <ProgressBar style="@style/ThreadListItemExpandedProgressBar"
                         android:layout_centerInParent="true"
                         android:id="@+id/list_item_expanded_progress_bar"/>
        </RelativeLayout>
        <View
            android:id="@+id/list_item_top_spacer"
            android:layout_width="wrap_content"
            android:layout_height="4dp"/>
        <TextView style="@style/ThreadListItemSubject" android:id="@+id/list_item_subject"/>
        <ImageView style="@style/ThreadListItemCountryFlag" android:id="@+id/list_item_country_flag"/>
        <TextView style="@style/ThreadListItemHead" android:id="@+id/list_item_header"/>
        <TextView style="@style/ThreadListItemTitle" android:id="@+id/list_item_title"/>
    </RelativeLayout>

    <TextView style="@style/ThreadListItemFullText" android:id="@+id/list_item_text"/>

    <TextView style="@style/ThreadListItemExifText" android:id="@+id/list_item_image_exif"/>

    <ImageView
            android:id="@+id/list_item_thread_banner_ad"
            style="@style/ThreadListBannerAd"
            />

</com.chanapps.four.component.CheckableLinearLayout>
