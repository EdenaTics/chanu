<?xml version="1.0" encoding="utf-8"?>
<com.chanapps.four.component.CheckableLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/ThreadListLayout"
        android:id="@+id/list_item">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView style="@style/ThreadListItemImage" android:id="@+id/list_item_image"/>
        <TextView style="@style/ThreadListItemHeadText" android:id="@+id/list_item_header"/>
        <TextView style="@style/ThreadListItemSnippetText" android:id="@+id/list_item_snippet"/>
        <TextView style="@style/ThreadListItemDateText" android:id="@+id/list_item_date"/>
        <ImageView style="@style/ThreadListItemCountryFlag" android:id="@+id/list_item_country_flag"/>
        <ImageView style="@style/ThreadListItemExpander" android:id="@+id/list_item_expander"/>
        <ImageView style="@style/ThreadListItemCollapse" android:id="@+id/list_item_collapse"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView style="@style/ThreadListItemImageExpanded" android:id="@+id/list_item_image_expanded"/>

        <ProgressBar style="@style/ThreadListItemExpandedProgressBar" android:layout_centerInParent="true" android:id="@+id/list_item_expanded_progress_bar"/>

    </RelativeLayout>

    <Button style="@style/ThreadListItemSpoilerButton" android:id="@+id/list_item_spoiler_button"/>

    <TextView style="@style/ThreadListItemExifText" android:id="@+id/list_item_image_exif"/>

    <TextView style="@style/ThreadListItemFullText" android:id="@+id/list_item_text"/>

</com.chanapps.four.component.CheckableLinearLayout>
