<?xml version="1.0" encoding="utf-8"?>
<com.chanapps.four.component.CheckableLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/ThreadListHeaderLayout"
        android:id="@+id/list_item"
        >

    <RelativeLayout style="@style/ThreadListHeaderImageSection">
        <ImageView style="@style/ThreadListHeaderImage" android:id="@+id/list_item_image"/>
        <ImageView style="@style/ThreadListHeaderImageExpanded" android:id="@+id/list_item_image_expanded"/>
        <ProgressBar style="@style/ThreadListItemExpandedProgressBar" android:id="@+id/list_item_expanded_progress_bar"/>
        <View style="@style/ThreadListHeaderImageExpandedClickEffect" android:id="@+id/list_item_image_expanded_click_effect"/>
    </RelativeLayout>

    <RelativeLayout style="@style/ThreadListHeaderBar">
        <LinearLayout style="@style/ThreadListHeaderBarAgoWrapper" android:id="@+id/list_item_ago_wrapper">
            <TextView style="@style/ThreadListHeaderBarAgo" android:id="@+id/list_item_header_bar_ago"/>
            <TextView style="@style/ThreadListHeaderBarNo" android:id="@+id/list_item_header_bar_no"/>
        </LinearLayout>
        <!--
        <LinearLayout style="@style/ThreadListHeaderBarImageDetailsWrapper" android:id="@+id/list_item_image_details_wrapper">
            <TextView style="@style/ThreadListHeaderBarAgo" android:id="@+id/list_item_header_bar_image_dimensions"
                    android:text="1280x720"
                    />
            <TextView style="@style/ThreadListHeaderBarNo" android:id="@+id/list_item_header_bar_image_size"
                    android:text="130KB"
                    />
        </LinearLayout>
        -->
        <LinearLayout style="@style/ThreadListHeaderBarReply" android:id="@+id/list_item_header_bar_reply_wrapper">
            <ImageView style="@style/ThreadListHeaderBarReplyIcon" android:id="@+id/list_item_header_bar_reply"/>
        </LinearLayout>
        <LinearLayout style="@style/ThreadListHeaderBarOverflow" android:id="@+id/list_item_header_bar_overflow_wrapper">
            <ImageView style="@style/ThreadListHeaderBarOverflowIcon" android:id="@+id/list_item_header_bar_overflow"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout style="@style/ThreadListHeaderHeadWrapper" android:id="@+id/list_item_header_wrapper">
        <LinearLayout
            android:id="@+id/list_item_subject_icons"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ThreadListHeader_subjectHeight"
            android:dividerPadding="@dimen/ThreadListHeader_small_padding"
            android:orientation="horizontal">
            <ImageView
                    android:id="@+id/list_item_dead_icon"
                    android:layout_width="@dimen/ThreadListHeader_subjectHeight"
                    android:layout_height="@dimen/ThreadListHeader_subjectHeight"
                    android:padding="@dimen/ThreadListHeader_micro_padding"
                    android:layout_marginRight="@dimen/ThreadListHeader_small_padding"
                    android:src="@drawable/glyphish_skull_dark"
                    android:visibility="gone"/>
        </LinearLayout>
        <TextView style="@style/ThreadListHeaderSubject" android:id="@+id/list_item_subject"/>
        <ImageView style="@style/ThreadListHeaderCountryFlag" android:id="@+id/list_item_country_flag"/>
        <TextView style="@style/ThreadListHeaderFullText" android:id="@+id/list_item_text"/>
        <TextView style="@style/ThreadListHeaderHead" android:id="@+id/list_item_header"/>
        <TextView style="@style/ThreadListHeaderExifText" android:id="@+id/list_item_exif_text"/>
    </RelativeLayout>

    <View style="@style/ThreadListHeaderNumHorizontalBorder" android:id="@+id/list_item_num_horizontal_border"/>

    <LinearLayout style="@style/ThreadListHeaderNumSection">

        <RelativeLayout style="@style/ThreadListHeaderNumWrap" android:id="@+id/list_item_num_replies">
            <LinearLayout style="@style/ThreadListHeaderNumWrapInner">
                <TextView style="@style/ThreadListHeaderNumNum" android:id="@+id/list_item_num_replies_text"/>
                <TextView style="@style/ThreadListHeaderNumLabel" android:id="@+id/list_item_num_replies_label"/>
            </LinearLayout>
        </RelativeLayout>

        <View style="@style/ThreadListHeaderNumVerticalBorder" android:id="@+id/list_item_num_vertical_border"/>

        <RelativeLayout style="@style/ThreadListHeaderNumWrap" android:id="@+id/list_item_num_images">
            <LinearLayout style="@style/ThreadListHeaderNumWrapInner">
                <TextView style="@style/ThreadListHeaderNumNum" android:id="@+id/list_item_num_images_text"/>
                <TextView style="@style/ThreadListHeaderNumLabel" android:id="@+id/list_item_num_images_label"/>
            </LinearLayout>
        </RelativeLayout>

        <View style="@style/ThreadListHeaderNumVerticalBorder" android:id="@+id/list_item_num_vertical_border"/>

        <RelativeLayout style="@style/ThreadListHeaderNumWrap" android:id="@+id/list_item_num_direct_replies"
                        android:background="@drawable/thread_list_selector_bg">
            <LinearLayout style="@style/ThreadListHeaderNumWrapInner">
                <TextView style="@style/ThreadListHeaderNumNum" android:id="@+id/list_item_num_direct_replies_text"
                          android:textColor="@color/blue_base"/>
                <TextView style="@style/ThreadListHeaderNumLabel" android:id="@+id/list_item_num_direct_replies_label"
                          android:textColor="@color/blue_base"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</com.chanapps.four.component.CheckableLinearLayout>
