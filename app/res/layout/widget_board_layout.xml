<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/widget_board_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/widget_rounded_background"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/widget_layout"
            android:orientation="horizontal"
            android:padding="0dp"
            android:weightSum="3"
            >
        <!--
                    android:divider="@android:color/transparent"
                    android:dividerPadding="2dp"
                    android:verticalSpacing="8dp"
                    android:horizontalSpacing="8dp"
        -->
        <ImageView android:id="@+id/image_left"
                   android:layout_height="match_parent"
                   android:layout_width="0dp"
                   android:contentDescription="Left Thumbnail Image"
                   android:scaleType="centerCrop"
                   android:layout_weight="1"
                   android:src="@drawable/a"
                />

        <ImageView android:id="@+id/image_center"
                   android:layout_height="match_parent"
                   android:layout_width="0dp"
                   android:layout_marginLeft="2dp"
                   android:layout_marginRight="2dp"
                   android:contentDescription="Center Thumbnail Image"
                   android:scaleType="centerCrop"
                   android:layout_weight="1"
                   android:src="@drawable/a_2"
                />

        <ImageView android:id="@+id/image_right"
                   android:layout_height="match_parent"
                   android:layout_width="0dp"
                   android:contentDescription="Right Thumbnail Image"
                   android:scaleType="centerCrop"
                   android:layout_weight="1"
                   android:src="@drawable/a_3"
                />

    </LinearLayout>

    <TextView
            android:id="@+id/board_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/PaletteWhite"
            android:background="@color/PaletteBlackHalfOpacity"
            android:textStyle="bold"
            android:text="@string/board_a"
            />

    <ImageButton
            android:id="@+id/refresh"
            android:layout_height="24dp"
            android:layout_width="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:src="@drawable/widget_refresh_button_selector"
            android:background="@color/PaletteBlackHalfOpacity"
            android:contentDescription="@string/widget_refresh"
            />

    <ImageButton
            android:id="@+id/configure"
            android:layout_height="24dp"
            android:layout_width="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@drawable/widget_configure_button_selector"
            android:background="@color/PaletteBlackHalfOpacity"
            android:contentDescription="@string/widget_configure"
            />

    <!--
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/widget_rounded_background"
            />
     -->

</RelativeLayout>
