<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/grid_item"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="?themedLargeCardBackground"
             android:foreground="@drawable/board_grid_selector_bg"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/BoardGridImageSize"
            >

        <ImageView
                android:id="@+id/grid_item_thread_thumb"
                android:layout_width="@dimen/BoardGridImageSize"
                android:layout_height="@dimen/BoardGridImageSize"
                android:scaleType="centerCrop"
                android:contentDescription="@string/thread_post_image"
                android:visibility="gone"
                android:background="@drawable/board_grid_selector_bg"
                />

        <TextView
                android:id="@+id/grid_item_thread_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/grid_item_thread_thumb"
                android:paddingLeft="@dimen/BoardGridView.spacing"
                android:paddingRight="@dimen/BoardGridView.rightSpacing"
                android:paddingTop="@dimen/BoardGridView.topSpacing"
                android:textColor="?themedCardSubjectTextColor"
                android:textSize="@dimen/BoardGridLargeSubject"
                android:visibility="gone"
                android:maxLines="@integer/BoardGridView.maxLines"
                />

        <TextView
                android:id="@+id/grid_item_thread_subject_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/BoardGridView.spacing"
                android:paddingRight="@dimen/BoardGridView.rightSpacing"
                android:paddingTop="@dimen/BoardGridView.topSpacing"
                android:textColor="?themedCardSubjectTextColor"
                android:textSize="@dimen/BoardGridSubjectHeader"
                android:visibility="gone"
                />

        <ImageView
                android:id="@+id/grid_item_country_flag"
                android:layout_width="@dimen/BoardGridItemCountryFlagWidth"
                android:layout_height="@dimen/BoardGridItemCountryFlagHeight"
                android:paddingBottom="@dimen/BoardGridItemCountryFlagPaddingBottom"
                android:layout_marginLeft="@dimen/BoardGridView.spacing"
                android:scaleType="fitXY"
                android:layout_toRightOf="@+id/grid_item_thread_thumb"
                android:layout_alignParentBottom="true"
                android:contentDescription="@string/thread_country_flag"
                android:visibility="gone"
                />

        <TextView
                android:id="@+id/grid_item_num_replies_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/BoardGridView.spacing"
                android:layout_toRightOf="@+id/grid_item_country_flag"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/BoardGridView.infoBottomPadding"
                android:textColor="@color/PaletteLightGray"
                android:textSize="@dimen/BoardGridInfo"
                />

        <ImageView
                android:id="@+id/grid_item_num_replies_img"
                android:layout_width="@dimen/BoardGridItemNumRepliesImgWidth"
                android:layout_height="@dimen/BoardGridItemNumRepliesImgHeight"
                android:layout_marginLeft="@dimen/BoardGridItemNumRepliesSpacing"
                android:layout_toRightOf="@+id/grid_item_num_replies_text"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/BoardGridItemNumRepliesImgPaddingBottom"
                android:src="?themedNumRepliesIcon"
                android:scaleType="fitCenter"
                />

        <TextView
                android:id="@+id/grid_item_num_images_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/BoardGridItemIconSpacing"
                android:layout_toRightOf="@+id/grid_item_num_replies_img"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/BoardGridView.infoBottomPadding"
                android:textColor="@color/PaletteLightGray"
                android:textSize="@dimen/BoardGridInfo"
                />

        <ImageView
                android:id="@+id/grid_item_num_images_img"
                android:layout_width="@dimen/BoardGridItemNumImagesImgWidth"
                android:layout_height="@dimen/BoardGridItemNumImagesImgHeight"
                android:layout_marginLeft="@dimen/BoardGridItemNumRepliesSpacing"
                android:layout_toRightOf="@+id/grid_item_num_images_text"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/BoardGridItemNumImagesImgPaddingBottom"
                android:scaleType="fitXY"
                android:src="?themedNumImagesIcon"
                />

        <ImageView
                android:id="@+id/grid_item_dead_icon"
                android:layout_width="@dimen/BoardGridItemIconWidth"
                android:layout_height="@dimen/BoardGridItemIconHeight"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/BoardGridItemIconSpacing"
                android:layout_toRightOf="@+id/grid_item_num_images_img"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/BoardGridItemIconPaddingBottom"
                android:scaleType="fitCenter"
                android:src="?themedDeadIcon"
                android:visibility="visible"/>

        <ImageView
                android:id="@+id/grid_item_sticky_icon"
                android:layout_width="@dimen/BoardGridItemIconWidth"
                android:layout_height="@dimen/BoardGridItemIconHeight"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/BoardGridItemIconSpacing"
                android:layout_toRightOf="@+id/grid_item_dead_icon"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/BoardGridItemIconPaddingBottom"
                android:scaleType="fitCenter"
                android:src="?themedStickyIcon"
                android:visibility="visible"/>

        <ImageView
                android:id="@+id/grid_item_closed_icon"
                android:layout_width="@dimen/BoardGridItemIconWidth"
                android:layout_height="@dimen/BoardGridItemIconHeight"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/BoardGridItemIconSpacing"
                android:layout_toRightOf="@+id/grid_item_sticky_icon"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/BoardGridItemIconPaddingBottom"
                android:scaleType="fitCenter"
                android:src="?themedClosedIcon"
                android:visibility="visible"/>

        <TextView
                android:id="@+id/grid_item_thread_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/grid_item_closed_icon"
                android:layout_alignParentBottom="true"
                android:paddingLeft="@dimen/BoardGridItemIconSpacing"
                android:paddingRight="24dp"
                android:paddingBottom="@dimen/BoardGridView.infoBottomPadding"
                android:textColor="@color/PaletteLightGray"
                android:textSize="@dimen/BoardGridInfo"
                android:maxLines="1"
                />

        <TextView
                android:id="@+id/grid_item_thread_info_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingLeft="@dimen/BoardGridView.spacing"
                android:paddingBottom="@dimen/BoardGridView.infoBottomPadding"
                android:textColor="@color/PaletteLightGray"
                android:textSize="@dimen/BoardGridInfoHeader"
                />

    </RelativeLayout>

    <ImageView
            android:id="@+id/grid_item_overflow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="5dp"
            android:paddingTop="4dp"
            android:src="@drawable/card_overflow_icon"
            android:background="@drawable/board_grid_selector_bg"
            />

    <com.chanapps.four.component.LetterSpacingTextView
            android:id="@+id/grid_item_board_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:gravity="center"
            android:textSize="@dimen/BoardGridBoardCode"
            android:textStyle="bold"
            android:textColor="@color/PaletteBoardCodeText"
            android:paddingRight="@dimen/BoardGridItemIconSpacing"
            android:paddingBottom="@dimen/BoardGridView.infoBottomPadding"
            />

</FrameLayout>
