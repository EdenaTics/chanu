<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_item"
    style="@style/BoardGridLayout">

    <ImageView
            android:id="@+id/grid_item_thread_thumb"
            style="@style/BoardGridImage"
            />

    <TextView
            android:id="@+id/grid_item_num_replies"
            style="@style/BoardGridNumReplies"
            />

    <TextView
            android:id="@+id/grid_item_board_abbrev"
            style="@style/BoardGridAbbrev"
            />

    <TextView
            android:id="@+id/grid_item_num_images"
            style="@style/BoardGridNumImages"
            />

    <RelativeLayout
        style="@style/BoardGridTextImageOverlayWrapper">

        <TextView
                android:id="@+id/grid_item_thread_subject"
                style="@style/BoardGridTextImageTopOverlay"
                />

    </RelativeLayout>

    <ImageView
            android:id="@+id/grid_item_country_flag"
            style="@style/BoardGridCountryFlag"
            />

    <TextView
            android:id="@+id/grid_item_thread_title"
            style="@style/BoardTypeText"
            />

</RelativeLayout>
