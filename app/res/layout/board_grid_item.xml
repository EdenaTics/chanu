<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_item"
    style="@style/BoardGridLayout">

    <ImageView
            android:id="@+id/grid_item_image"
            style="@style/BoardGridImage"
            />

    <RelativeLayout
        style="@style/BoardGridTextImageOverlayWrapper">

        <TextView
                android:id="@+id/grid_item_text_top"
                style="@style/BoardGridTextImageTopOverlay"
                />

        <TextView
                android:id="@+id/grid_item_text"
                style="@style/BoardGridTextImageOverlay"
                />

    </RelativeLayout>

    <ImageView
            android:id="@+id/grid_item_country_flag"
            style="@style/BoardGridCountryFlag"
            />

</RelativeLayout>
