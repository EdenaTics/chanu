<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/post_reply_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

    <LinearLayout
            android:id="@+id/post_reply_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <EditText
                android:id="@+id/post_reply_subject"
                android:hint="@string/post_reply_subject_hint"
                android:inputType="textEmailSubject"
                style="@style/PostReplyEditTextStyle"
                android:maxLength="100"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="0dp"
                >
        </EditText>

        <TextView
                android:id="@+id/post_reply_text"
                style="@style/PostReplyEditTextStyle"
                android:hint="@string/post_reply_text_hint"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:scrollbars="none"
                >
        </TextView>

        <FrameLayout
                android:id="@+id/post_reply_recaptcha_frame"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="80dp">
            <ImageButton
                    android:id="@+id/post_reply_recaptcha_imgview"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffffff">
            </ImageButton>
            <ImageView
                    android:id="@+id/post_reply_recaptcha_loading"
                    android:src="@drawable/navigation_refresh"
                    android:scaleType="centerCrop"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center">
            </ImageView>
        </FrameLayout>

        <EditText
                android:id="@+id/post_reply_recaptcha_response"
                style="@style/PostReplyEditTextStyle"
                android:hint="@string/post_reply_recaptcha_hint"
                android:inputType="textNoSuggestions"
                android:imeOptions="actionSend"
                android:imeActionLabel="@string/post_reply_send"
                android:maxLength="100"
                >
        </EditText>

        <TextView
                android:id="@+id/post_reply_pass_status"
                style="@style/PostReplyEditTextStyle"
                android:textStyle="bold"
            >
        </TextView>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp">

            <ImageButton
                    android:id="@+id/post_reply_picture_button"
                    style="@style/PostReplyButtonStyle"
                    android:contentDescription="@string/post_reply_picture_hint"
                    android:hint="@string/post_reply_picture_hint"
                    android:src="@drawable/content_picture">
            </ImageButton>

            <ImageButton
                    android:id="@+id/post_reply_camera_button"
                    style="@style/PostReplyButtonStyle"
                    android:contentDescription="@string/post_reply_camera_hint"
                    android:hint="@string/post_reply_camera_hint"
                    android:src="@drawable/device_access_camera">
            </ImageButton>

            <ImageButton
                    android:id="@+id/post_reply_delete_button"
                    style="@style/PostReplyButtonStyle"
                    android:visibility="gone"
                    android:contentDescription="@string/post_reply_delete_hint"
                    android:hint="@string/post_reply_delete_hint"
                    android:src="@drawable/content_backspace">
            </ImageButton>

            <ImageButton
                    android:id="@+id/post_reply_bump_button"
                    style="@style/PostReplyButtonStyle"
                    android:contentDescription="@string/post_reply_bump_hint"
                    android:hint="@string/post_reply_bump_hint"
                    android:src="@drawable/rating_good">
            </ImageButton>

            <ImageButton
                    android:id="@+id/post_reply_sage_button"
                    style="@style/PostReplyButtonStyle"
                    android:contentDescription="@string/post_reply_sage_hint"
                    android:hint="@string/post_reply_sage_hint"
                    android:src="@drawable/rating_bad">
            </ImageButton>

            <ImageButton
                    android:id="@+id/post_reply_pass_enable_button"
                    style="@style/PostReplyButtonStyle"
                    android:contentDescription="@string/post_reply_pass_enable_hint"
                    android:hint="@string/post_reply_pass_enable_hint"
                    android:src="@drawable/device_access_accounts_enable"
                    android:visibility="gone">
            </ImageButton>

            <ImageButton
                    android:id="@+id/post_reply_pass_disable_button"
                    style="@style/PostReplyButtonStyle"
                    android:contentDescription="@string/post_reply_pass_disable_hint"
                    android:hint="@string/post_reply_pass_disable_hint"
                    android:src="@drawable/device_access_accounts_disable"
                    android:visibility="gone">
            </ImageButton>

        </LinearLayout>

        <CheckBox
                android:id="@+id/post_reply_spoiler_checkbox"
                style="@style/PostReplyCheckboxStyle"
                android:text="@string/post_reply_spoiler" />

        <ImageView
                android:id="@+id/post_reply_image_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:visibility="gone"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/post_reply_add_image"
                >
        </ImageView>

        <EditText
                android:id="@+id/post_reply_name"
                android:hint="@string/post_reply_name_hint"
                android:inputType="textPersonName"
                style="@style/PostReplyEditTextStyle"
                android:maxLength="100"
                >
        </EditText>

        <EditText
                android:id="@+id/post_reply_email"
                android:hint="@string/post_reply_email_hint"
                android:inputType="textEmailAddress"
                style="@style/PostReplyEditTextStyle"
                android:maxLength="100"
                >
        </EditText>

        <EditText
                android:id="@+id/post_reply_password"
                android:hint="@string/post_reply_password_hint"
                android:inputType="text|textVisiblePassword|numberPassword"
                style="@style/PostReplyEditTextStyle"
                android:maxLength="8"
                >
        </EditText>

    </LinearLayout>

</ScrollView>
