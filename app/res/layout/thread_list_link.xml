<?xml version="1.0" encoding="utf-8"?>
<com.chanapps.four.component.CheckableLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/ThreadListItemLayout"
        android:id="@+id/list_item"
        android:paddingLeft="@dimen/BoardGridView.spacing"
        android:paddingRight="@dimen/BoardGridView.spacing"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_item_header_wrapper"
                >

            <ImageView style="@style/ThreadListLinkImage" android:id="@+id/list_item_image"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/list_item_image"
                    android:layout_toLeftOf="@+id/list_item_country_flag"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/ThreadListHeader_padding"
                    android:paddingRight="@dimen/ThreadListHeader_padding"
                    android:paddingTop="@dimen/ThreadListHeader_small_padding"
                    android:paddingBottom="@dimen/ThreadListHeader_small_padding"
                    android:orientation="vertical"
                    >

                <TextView style="@style/ThreadListItemSubject" android:id="@+id/list_item_subject"
                          android:textColor="@color/PaletteDarkGray"
                          android:linksClickable="false"
                          android:autoLink="none"
                        />
                <TextView style="@style/ThreadListLinkHead" android:id="@+id/list_item_header"
                          android:linksClickable="false"
                          android:autoLink="none"
                        />
                <ImageView style="@style/ThreadListItemCountryFlag" android:id="@+id/list_item_country_flag"
                           android:linksClickable="false"
                           android:autoLink="none"
                        />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</com.chanapps.four.component.CheckableLinearLayout>
