<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recent_image_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical"
        >
    <ImageView
            android:id="@+id/recent_image_0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:contentDescription="@string/thread_post_image"
            android:background="@drawable/board_grid_selector_bg"
            />
    <LinearLayout
            android:id="@+id/recent_image_grid_row_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/recent_image_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:contentDescription="@string/thread_post_image"
                android:background="@drawable/board_grid_selector_bg"
                />
        <ImageView
                android:id="@+id/recent_image_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:contentDescription="@string/thread_post_image"
                android:background="@drawable/board_grid_selector_bg"
                />
    </LinearLayout>

</LinearLayout>
