<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/list_item"
              style="@style/BoardListLayout"
              android:orientation="vertical"
        >

    <TextView android:id="@+id/list_item_thread_button" style="@style/BoardListButton"/>

    <TextView android:id="@+id/list_item_thread_title" style="@style/BoardListTitle"/>

    <View android:id="@+id/list_item_thread_title_bar" style="@style/BoardListTitleBar"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            >

        <RelativeLayout
                android:id="@+id/list_item_thread_image_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <com.chanapps.four.component.StretchyImageView
                    android:id="@+id/list_item_thread_thumb"
                    style="@style/BoardGridImage"
                    android:layout_height="140dp"
                    android:layout_width="140dp"
                    />

            <TextView
                    android:id="@+id/list_item_board_abbrev"
                    style="@style/BoardGridAbbrev"
                    android:visibility="gone"
                    />

        </RelativeLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/list_item_thread_subject"
                    style="@style/BoardListSubject"
                    />

            <ImageView
                    android:id="@+id/list_item_country_flag"
                    style="@style/ThreadListItemCountryFlag"
                    />

            <TextView
                    android:id="@+id/list_item_thread_headline"
                    style="@style/BoardListHeadline"
                    />

        </LinearLayout>

    </LinearLayout>

    <TextView
            android:id="@+id/list_item_thread_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/BoardListText_paddingLeft"
            android:paddingRight="@dimen/BoardListText_paddingRight"
            android:paddingTop="@dimen/BoardListText_paddingTop"
            android:paddingBottom="@dimen/BoardListText_paddingBottom"
            android:textSize="@dimen/BoardListText_textSize"
            />

    <com.chanapps.four.component.StretchyImageView
            android:id="@+id/list_item_thread_banner_ad"
            style="@style/BoardTypeBannerAd"
            />

</LinearLayout>
