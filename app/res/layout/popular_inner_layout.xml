<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
        >

<!-- POPULAR THREADS -->

    <RelativeLayout
            android:id="@+id/popular_row_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/PopularTitle_paddingTop"
                android:paddingLeft="@dimen/PopularItem_paddingLeft"
                android:paddingRight="@dimen/PopularItem_paddingRight"
                android:paddingBottom="@dimen/PopularItem_paddingBottom"
                android:textSize="@dimen/PopularLargeItem_textSize"
                android:textStyle="bold"
                android:textColor="@color/PaletteChanuGreen"
                android:text="What's Popular"/>

        <TextView
                android:id="@+id/last_fetched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:paddingTop="@dimen/PopularTitle_paddingTop"
                android:paddingLeft="@dimen/PopularItem_paddingLeft"
                android:paddingRight="@dimen/PopularItem_paddingRight"
                android:paddingBottom="@dimen/PopularItem_paddingBottom"
                android:textSize="@dimen/PopularItem_textSize"
                android:textColor="@color/PaletteDarkGray"
                android:gravity="right"
                />
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/popular_row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
        <include layout="@layout/popular_large_item"
                 android:id="@+id/popular_item_0"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularLargeItem_layout_height"
                 android:layout_weight="2"/>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/PopularLargeItem_layout_height"
                android:layout_weight="1"
                android:orientation="vertical"
                >
            <include layout="@layout/popular_item"
                     android:id="@+id/popular_item_1"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/PopularItem_layout_height"
                     android:layout_weight="1"/>
            <include layout="@layout/popular_item"
                     android:id="@+id/popular_item_2"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/PopularItem_layout_height"
                     android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/popular_row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
        <include layout="@layout/popular_item"
                 android:id="@+id/popular_item_3"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="2"/>
        <include layout="@layout/popular_item"
                 android:id="@+id/popular_item_4"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/popular_row_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
        <include layout="@layout/popular_item"
                 android:id="@+id/popular_item_5"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="2"/>
        <include layout="@layout/popular_item"
                 android:id="@+id/popular_item_6"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/popular_row_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
        <include layout="@layout/popular_item"
                 android:id="@+id/popular_item_7"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="2"/>
        <include layout="@layout/popular_item"
                 android:id="@+id/popular_item_8"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/popular_row_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
        <include layout="@layout/popular_item"
                 android:id="@+id/popular_item_9"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="3"/>
    </LinearLayout>

    <!-- LATEST POSTS -->

    <TextView
            android:id="@+id/latest_row_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/PopularTitle_paddingTop"
            android:paddingLeft="@dimen/PopularItem_paddingLeft"
            android:paddingRight="@dimen/PopularItem_paddingRight"
            android:paddingBottom="@dimen/PopularItem_paddingBottom"
            android:textSize="@dimen/PopularLargeItem_textSize"
            android:textColor="@color/PaletteChanuGreen"
            android:textStyle="bold"
            android:text="Latest Posts"/>

    <LinearLayout
            android:id="@+id/latest_row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
        <include layout="@layout/popular_large_item"
                android:id="@+id/latest_item_0"
                android:layout_width="0dp"
                android:layout_height="@dimen/PopularLargeItem_layout_height"
                android:layout_weight="2"/>
        <include layout="@layout/popular_tall_item"
                android:id="@+id/latest_item_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/PopularLargeItem_layout_height"
                android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/latest_row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
        <include layout="@layout/popular_item"
                 android:id="@+id/latest_item_2"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="2"/>
        <include layout="@layout/popular_item"
                 android:id="@+id/latest_item_3"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/latest_row_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
        <include layout="@layout/popular_item"
                 android:id="@+id/latest_item_4"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="1"/>
        <include layout="@layout/popular_item"
                 android:id="@+id/latest_item_5"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="1"/>
        <include layout="@layout/popular_item"
                 android:id="@+id/latest_item_6"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/latest_row_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
        <include layout="@layout/popular_item"
                 android:id="@+id/latest_item_7"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="1"/>
        <include layout="@layout/popular_item"
                 android:id="@+id/latest_item_8"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="1"/>
        <include layout="@layout/popular_item"
                 android:id="@+id/latest_item_9"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="1"/>
    </LinearLayout>

<!-- RECENT IMAGES -->

    <TextView
            android:id="@+id/images_row_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/PopularTitle_paddingTop"
            android:paddingLeft="@dimen/PopularItem_paddingLeft"
            android:paddingRight="@dimen/PopularItem_paddingRight"
            android:paddingBottom="@dimen/PopularItem_paddingBottom"
            android:textSize="@dimen/PopularLargeItem_textSize"
            android:textStyle="bold"
            android:textColor="@color/PaletteChanuGreen"
            android:text="Recent Images"/>
    
    <LinearLayout
            android:id="@+id/recent_row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
        <include layout="@layout/popular_item"
                 android:id="@+id/recent_item_0"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="1"/>
        <include layout="@layout/popular_item"
                 android:id="@+id/recent_item_1"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="1"/>
        <include layout="@layout/popular_item"
                 android:id="@+id/recent_item_2"
                 android:layout_width="0dp"
                 android:layout_height="@dimen/PopularItem_layout_height"
                 android:layout_weight="1"/>
    </LinearLayout>
    
</LinearLayout>