<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tutorial_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/PaletteBlack34Opacity"
        android:clickable="true"
        android:visibility="gone"
        >

    <TextView
            android:id="@+id/tutorial_overlay_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tutorial_overlay_subject_layout_margin"
            android:textSize="@dimen/tutorial_overlay_subject_textSize"
            android:textStyle="bold"
            android:textColor="@color/PaletteLightGreen"
            />

    <TextView
            android:id="@+id/tutorial_overlay_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tutorial_overlay_detail_marginLeft"
            android:layout_marginTop="@dimen/tutorial_overlay_detail_marginTop"
            android:layout_marginRight="@dimen/tutorial_overlay_detail_marginRight"
            android:layout_marginBottom="@dimen/tutorial_overlay_detail_marginBottom"
            android:layout_below="@+id/tutorial_overlay_subject"
            android:textColor="@color/PaletteLighterGray"
            android:textSize="@dimen/tutorial_overlay_detail_textSize"
            />

    <Button
            android:id="@+id/tutorial_overlay_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tutorial_overlay_button_marginTop"
            android:layout_marginRight="@dimen/tutorial_overlay_button_paddingRight"
            android:layout_below="@+id/tutorial_overlay_detail"
            android:layout_alignParentRight="true"
            android:background="@drawable/board_grid_selector_bg"
            android:paddingLeft="@dimen/tutorial_overlay_button_paddingLeft"
            android:paddingTop="@dimen/tutorial_overlay_button_paddingTop"
            android:paddingRight="@dimen/tutorial_overlay_button_paddingRight"
            android:paddingBottom="@dimen/tutorial_overlay_button_paddingBottom"
            android:gravity="center"
            android:textColor="@color/PaletteWhite"
            android:textStyle="bold"
            android:textSize="@dimen/tutorial_overlay_button_textSize"
            android:text="@string/tutorial_overlay_button"
            android:contentDescription="@string/tutorial_overlay_button_description"
            />

    <TextView
            android:id="@+id/tutorial_overlay_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/tutorial_overlay_dismiss_marginRight"
            android:layout_marginBottom="@dimen/tutorial_overlay_dismiss_marginBottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/PaletteLighterGray"
            android:textSize="@dimen/tutorial_overlay_detail_textSize"
            android:text="@string/tutorial_overlay_dismiss"
            />

</RelativeLayout>
