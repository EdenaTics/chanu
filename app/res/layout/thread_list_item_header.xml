<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/ThreadListLayout" android:id="@+id/list_item">

    <RelativeLayout style="@style/ThreadListLayout" android:id="@+id/list_item_inner">

        <com.chanapps.four.component.StretchyImageView style="@style/ThreadListItemHeaderImage" android:id="@+id/list_item_image"/>
        <TextView style="@style/ThreadListItemHeadText" android:id="@+id/list_item_header"/>
        <TextView style="@style/ThreadListItemShortText" android:id="@+id/list_item_text"/>
        <TextView style="@style/ThreadListItemDateText" android:id="@+id/list_item_date"/>
        <TextView style="@style/ThreadListItemImageOverlay" android:id="@+id/list_item_image_overlay"/>
        <ImageView style="@style/ThreadListItemCountryFlag" android:id="@+id/list_item_country_flag"/>

    </RelativeLayout>

    <RelativeLayout style="@style/ThreadListLayout" android:id="@+id/list_item_inner_bottom" android:layout_below="@+id/list_item_inner">

        <ImageView style="@style/ThreadListItemImageExpanded" android:id="@+id/list_item_image_expanded"/>

        <ProgressBar style="@style/ThreadListItemExpandedProgressBar" android:id="@+id/list_item_expanded_progress_bar"/>

    </RelativeLayout>

    <View style="@style/ThreadListItemHeaderBar" android:layout_below="@+id/list_item_inner_bottom"/>

</RelativeLayout>
