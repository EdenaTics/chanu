<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_item"
        style="@style/ThreadListLayout"
        >

    <RelativeLayout
            style="@style/ThreadListLayoutInner"
            >

        <TextView
                android:id="@+id/list_item_header"
                style="@style/ListShortTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="top|left"
                android:text="FOO"
                />

        <TextView
                android:id="@+id/list_item_text"
                style="@style/ListFullTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="8dp"
                android:layout_below="@+id/list_item_header"
                android:textSize="18sp"
                android:text="bar"
                />

        <com.chanapps.four.component.StretchyImageView
                android:id="@+id/list_item_image"
                style="@style/ThreadListItemImageStyle"
                android:contentDescription="@string/thread_post_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item_text"
                android:paddingTop="8dp"
                android:scaleType="fitStart"
                android:src="@drawable/board_3"
                />

        <ImageView
                android:id="@+id/list_item_country_flag"
                style="@style/GridCountryFlagStyle"
                android:contentDescription="@string/thread_country_flag"
                />

    </RelativeLayout>

</RelativeLayout>
