<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:padding="1dp"
        android:background="#010101"
        android:orientation="vertical"
        >

    <FrameLayout
            android:background="#fefefe"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <ScrollView
                android:id="@+id/popup_full_text_scroll_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="vertical">

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_marginBottom="16dp"
                    android:padding="16dp"
                    android:orientation="vertical">


                <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >

                    <TextView
                            android:id="@+id/popup_header"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#010101"
                            android:textStyle="bold"
                            android:paddingBottom="16dp"
                            android:focusable="true"
                            android:layout_gravity="top|left">
                    </TextView>

                    <ImageView
                            android:id="@+id/popup_country_flag"
                            android:layout_width="16dp"
                            android:layout_height="11dp"
                            android:layout_gravity="top|right"
                            android:focusable="false"
                            android:contentDescription="@string/popup_country_flag"
                            >
                    </ImageView>

                </FrameLayout>

                <TextView
                        android:id="@+id/popup_full_text"
                        style="@style/PopupFullTextViewStyle"
                        />

                <TextView
                        android:id="@+id/popup_spoiler_text"
                        style="@style/PopupFullTextViewStyle"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        />

                <TextView
                        android:id="@+id/popup_exif_text"
                        style="@style/PopupFullTextViewStyle"
                        android:layout_marginTop="8dp"
                        android:textSize="14dp"
                        android:visibility="gone"
                        />

                <TextView
                        android:id="@+id/popup_dead_thread_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:clickable="false"
                        android:textStyle="bold"
                        android:text="@string/dead_thread_reply" />

                <TextView
                        android:id="@+id/popup_closed_thread_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:clickable="false"
                        android:textStyle="bold"
                        android:text="@string/closed_thread_reply" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                >

            <View
                    android:id="@+id/popup_spoiler_button_line"
                    style="@style/PopupFullTextHorizontalSeparator" />

            <Button
                    android:id="@+id/popup_spoiler_button"
                    style="@style/PopupFullTextButtonStyle"
                    android:text="@string/spoiler" />

            <View
                    android:id="@+id/popup_exif_button_line"
                    style="@style/PopupFullTextHorizontalSeparator" />

            <Button
                    android:id="@+id/popup_exif_button"
                    style="@style/PopupFullTextButtonStyle"
                    android:text="@string/exif" />

            <View
                    android:id="@+id/popup_go_to_thread_button_line"
                    style="@style/PopupFullTextHorizontalSeparator" />

            <Button
                    android:id="@+id/popup_go_to_thread_button"
                    style="@style/PopupFullTextButtonStyle"
                    android:text="@string/popup_go_to_thread" />

            <View
                    android:id="@+id/popup_show_image_button_line"
                    style="@style/PopupFullTextHorizontalSeparator" />

            <Button
                    android:id="@+id/popup_show_image_button"
                    style="@style/PopupFullTextButtonStyle"
                    android:text="@string/popup_show_image" />

            <View
                    android:id="@+id/popup_highlight_button_line"
                    style="@style/PopupFullTextHorizontalSeparator" />

            <Button
                    android:id="@+id/popup_highlight_button"
                    style="@style/PopupFullTextButtonStyle"
                    android:text="@string/highlight_replies" />

            <View
                    android:id="@+id/popup_block_button_line"
                    style="@style/PopupFullTextHorizontalSeparator" />

            <Button
                    android:id="@+id/popup_block_button"
                    style="@style/PopupFullTextButtonStyle"
                    android:text="@string/blocklist_button" />

            <View
                    android:id="@+id/popup_reply_button_line"
                    style="@style/PopupFullTextHorizontalSeparator" />

            <Button
                    android:id="@+id/popup_reply_button"
                    style="@style/PopupFullTextButtonStyle"
                    android:text="@string/reply" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
