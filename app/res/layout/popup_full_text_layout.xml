<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:padding="1dp"
    android:background="#010101"
    android:orientation="vertical"
    >

    <FrameLayout
        android:background="#fefefe"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/popup_full_text_scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="96dp"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="16dp"
                android:orientation="vertical">


                <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/popup_header"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#010101"
                        android:textStyle="bold"
                        android:paddingBottom="16dp"
                        android:focusable="true"
                        android:layout_gravity="top|left">
                    </TextView>

                    <ImageView
                        android:id="@+id/popup_country_flag"
                        android:layout_width="16dp"
                        android:layout_height="11dp"
                        android:layout_gravity="top|right"
                        android:focusable="false"
                        android:contentDescription="@string/popup_country_flag"
                        >
                    </ImageView>

                </FrameLayout>

                <TextView
                    android:id="@+id/popup_full_text"
                    style="@style/PopupFullTextViewStyle"
                    />

                <TextView
                        android:id="@+id/popup_spoiler_text"
                        style="@style/PopupFullTextViewStyle"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        />

                <TextView
                        android:id="@+id/popup_exif_text"
                        style="@style/PopupFullTextViewStyle"
                        android:layout_marginTop="8dp"
                        android:textSize="12dp"
                        android:visibility="gone"
                        />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                >

            <Button
                    android:id="@+id/popup_spoiler_button"
                    style="@style/PopupFullTextButtonStyle"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:text="@string/spoiler" />

            <Button
                    android:id="@+id/popup_exif_button"
                    style="@style/PopupFullTextButtonStyle"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:text="@string/exif" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:weightSum="2">

                <TextView
                        android:id="@+id/popup_dead_thread_text_view"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:visibility="gone"
                        android:clickable="false"
                        android:textStyle="bold"
                        android:text="@string/dead_thread_reply" />

                <Button
                        android:id="@+id/popup_reply_button"
                        style="@style/PopupFullTextButtonStyle"
                        android:text="@string/reply" />

                <Button
                        android:id="@+id/popup_quote_button"
                        style="@style/PopupFullTextButtonStyle"
                        android:text="@string/quote" />

            </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:weightSum="2">

            <Button
                    android:id="@+id/popup_highlight_button"
                    style="@style/PopupFullTextButtonStyle"
                    android:text="@string/highlight_replies" />

            <Button
                    android:id="@+id/popup_dismiss_button"
                    style="@style/PopupFullTextButtonStyle"
                    android:text="@string/dismiss" />

            <Button
                    android:id="@+id/popup_full_width_dismiss_button"
                    style="@style/PopupFullTextButtonStyle"
                    android:layout_weight="2"
                    android:visibility="gone"
                    android:text="@string/dismiss" />

        </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
