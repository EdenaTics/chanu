<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_item"
        style="@style/ThreadListLayoutLarge">

    <RelativeLayout
            style="@style/ThreadListLayoutLargeInner">

        <RelativeLayout
                android:id="@+id/list_item_header_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <TextView
                    android:id="@+id/list_item_header"
                    style="@style/ListShortTextLargeStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/list_item_image"
                    android:gravity="top|left"
                    android:text="FOO"
                    />

            <com.chanapps.four.component.StretchyImageView
                    android:id="@+id/list_item_image"
                    style="@style/ThreadListItemImageStyle"
                    android:contentDescription="@string/thread_post_image"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="8dp"
                    android:gravity="top|right"
                    android:scaleType="fitEnd"
                    android:src="@drawable/board_3"
                    />

        </RelativeLayout>

        <TextView
                android:id="@+id/list_item_text"
                style="@style/ListFullTextLargeStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/list_item_header_wrapper"
                android:paddingTop="8dp"
                android:text="bar"
                />

        <ImageView
                android:id="@+id/list_item_country_flag"
                style="@style/ListCountryFlagStyle"
                android:contentDescription="@string/thread_country_flag"
                />

    </RelativeLayout>

</RelativeLayout>
