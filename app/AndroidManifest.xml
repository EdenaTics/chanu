<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.chanapps.four.activity"
          android:versionCode="11"
          android:versionName="1.0beta11">

    <uses-sdk
            android:minSdkVersion="15"/>
    <!--       android:targetSdkVersion="17" />  -->

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="com.android.vending.BILLING"/>

    <!-- check if app is in the foreground -->
    <uses-permission android:name="android.permission.GET_TASKS"/>

    <!-- used by gallery for slideshow -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.VIBRATE"/>


    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>

    <supports-screens android:smallScreens="false"
                      android:normalScreens="true" android:largeScreens="true"
                      android:anyDensity="true"/>

    <application
            android:name="com.chanapps.four.FourChannerApp"
            android:icon="@drawable/app_icon"
            android:label="@string/application_name"
            android:theme="@style/AppTheme"
            android:debuggable="true">

        <activity
                android:name=".PostReplyActivity"
                android:label="@string/post_reply_activity"
                android:configChanges="orientation"
                android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".PostReplyShareActivity"
                android:label="@string/post_reply_share_activity"
                android:configChanges="orientation"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="image/*"/>
            </intent-filter>
        </activity>

        <activity android:name=".GalleryViewActivity" android:label="@string/full_screen_image_activity"
                  android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ThreadActivity"
                    />
        </activity>

        <activity android:name=".BoardActivity" android:label="@string/board_activity"
                  android:taskAffinity=".BoardActivity"
                >
            <intent-filter android:priority="100">
                <action android:name="android.intent.action.VIEW"/>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="http" android:host="boards.4chan.org"/>
            </intent-filter>
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".BoardSelectorActivity"
                    />
            <meta-data
                    android:name="android.app.default_searchable"
                    android:value=".SearchActivity"/>
        </activity>

        <activity android:name=".ThreadActivity" android:label="@string/thread_activity"
                  android:taskAffinity=".ThreadActivity"
                >
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".BoardActivity"
                    />
            <meta-data
                    android:name="android.app.default_searchable"
                    android:value=".SearchActivity"/>
        </activity>

        <activity android:name=".SearchActivity" android:label="@string/thread_search">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data
                    android:name="android.app.searchable"
                    android:resource="@xml/searchable"
                    />
        </activity>

        <activity android:name=".SettingsActivity" android:label="@string/settings_activity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity android:name=".AboutActivity" android:label="@string/about_activity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity android:name=".BoardSelectorActivity" android:label="@string/application_name"
                  android:taskAffinity=".BoardSelectorActivity"
                >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.VIEW"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <service android:name="com.chanapps.four.service.FetchChanDataService"/>
        <service android:name="com.chanapps.four.service.BoardParserService"/>
        <service android:name="com.chanapps.four.service.BoardThreadsParserService"/>
        <service android:name="com.chanapps.four.service.ThreadParserService"/>
        <service android:name="com.chanapps.four.service.CleanUpService"/>
        <service android:name="com.chanapps.four.service.FileSaverService"/>
        <service android:name="com.chanapps.four.service.ImageDownloadService"/>
        <service android:name="com.chanapps.four.service.ThreadImageDownloadService"/>
        <service android:name="com.chanapps.four.service.FetchPopularThreadsService"/>

        <!--widgets-->
        <activity android:name="com.chanapps.four.widget.WidgetConfigureActivity"
                  android:excludeFromRecents="true"
                  android:taskAffinity=""
                  android:label="@string/widget_configure_title">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>
        <receiver android:name="com.chanapps.four.widget.BoardWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED"/>
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED"/>
                <action android:name="android.appwidget.action.APPWIDGET_DELETED"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_board_info"/>
        </receiver>
        <receiver android:name="com.chanapps.four.component.GlobalAlarmReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="com.chanapps.four.component.GlobalAlarmReceiver.update"/>
            </intent-filter>
        </receiver>
        <service android:name="com.chanapps.four.widget.UpdateWidgetService"/>

        <!-- Gallery Photo widget -->
